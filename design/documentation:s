####################################### TYPE = ENUM ######################################

type Enum (
    *Member1 |
    *Member2(More) |
    *Member3(AndMore)
)

be k Enum = Enum.Member1
be k = Enum.Member1 # This language is not to be verbose! Everything that's obvious is obvious!!!

# UNPACK ENUM #

k = Enum.Member2(More)

if be Enum.Member2(content) = k {
    # Unpacks content from the enum
} elif be Enum.Member1 = k {
    # k = Enum.Member1
}

